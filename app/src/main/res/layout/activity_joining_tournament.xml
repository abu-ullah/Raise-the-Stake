<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoiningTournament"
    android:orientation="vertical"
    android:background="@drawable/solidgray">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="20dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_dialog_dialer"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="right|center">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="TextView"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$400" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_margin="30dp"/>
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/textNBA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NBA 2K23"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_marginLeft="200dp"/>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonJoin"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Join for $25"
            app:cornerRadius="30dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:backgroundTint="#c1e6c6"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="22sp"
            />

        <Button
            android:id="@+id/buttonJoinCredit"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Join with x credit"
            app:cornerRadius="30dp"
            android:layout_gravity="center"
            android:backgroundTint="#c1e6c6"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="20sp"
            />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <Button
            android:id="@+id/buttonDetails"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:text="Tournament Details"
            app:cornerRadius="8dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            android:backgroundTint="#c1e6c6"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/buttonHowToPlay"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:text="How To Play"
            android:layout_marginBottom="30dp"
            app:cornerRadius="8dp"
            android:layout_gravity="center"
            android:backgroundTint="#c1e6c6"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/buttonGameRules"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:text="Game Rules"
            app:cornerRadius="8dp"
            android:layout_gravity="center"
            android:backgroundTint="#c1e6c6"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="20sp"
            />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/imageButtonHome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_baseline_home_24"
            tools:ignore="TouchTargetSizeCheck"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"></Space>


        <ImageButton
            android:id="@+id/imageButtonSearch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_baseline_search_24"
            tools:ignore="TouchTargetSizeCheck"
            android:layout_weight="1"
            android:background="@android:color/transparent"/>


        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"></Space>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_baseline_person_24"
            tools:ignore="TouchTargetSizeCheck"
            android:layout_weight="1"
            android:background="@android:color/transparent"/>
    </LinearLayout>
</LinearLayout>